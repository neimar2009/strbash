#!/bin/bash

apphelp() {

	appName=${1##*'/'}

    echo ""
    echo -e "\033[32;1mSinopse:\033[m"
    echo -e "\t\033[1m${appName}\033[m opções "
    echo ""
    echo -e "\033[32;1mDescrição:\033[m"
    echo -e "\t\033[1mopções\033[m todas as opções do comando \033[1mls\033[m"
    echo ""
    echo -e "\t    \033[1m${appName}\033[m é uma extensão do comando \033[1mls\033[m."
    echo -e "\t    Retorna o indicativo da existência de arquivos pesquisado(s)"
    echo -e "\tno(s) diretório(s) indicado(s), usando a lógica \033[1mOR\033[m." # " Usar a opção \033[1m-a\033[m para"
    #echo -e "\tretornar um resposta de lógica \033[1mAND\033[m."
    echo -e "\t    Zero (\033[1m0\033[m) para a não existência, um (\033[1m1\033[m) para a existência."
    echo -e "\033[32;1mObservação:\033[m"
    echo -e "\t    O retorno usando a lógica \033[1mAND\033[m ainda não está implementada. A"
    echo -e "\tsolução é usar \033[1m${appName}\033[m individualmente para cada arquivo."
    echo -e "\t    Não tem retorno quando for usado alguma opção do \033[1mls\033[m que retornem"
    echo -e "\tmas informações que o caminho do arquivo e o nome do arquivo."
    
    sctinfo=$documents$list
    if [ -f $sctinfo ]; then
        echo -e "\t    Comandos pertencentes a este pacote de scripts:"
        echo -e "\t    \033[1m"`cat $sctinfo`"\033[m"
    fi
    
    echo -e "\033[32;1mExemplo:\033[m"
    echo -e "\t${appName}"
    echo -e "\t${appName} ./*.ext"
    echo -e "\t${appName} *.ext *.sh *.dat ../*.pdf"
    echo ""

}

apphelp $1

