#!/bin/bash
#

## scuttail -> scttl -> string cut tail

if [ "$1" = "--help" ] || [ "$1" = "--readme" ]; then
	source ./sbsupport "$1"
	exit
fi

ARG=$1
[ "$3" = "" ] && let count=1 || count=$3
case $count in
    [0-9] | [0-9][0-9] )
        let i=0
        while (( $i < $count )) ; do
            ARG=${ARG%$2*}
            [ "$ARG" = "" ] && break
            ((i++))
        done
        ;;
esac
echo $ARG
