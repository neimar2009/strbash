#!/bin/bash

apphelp() {

	appName=${1##*'/'}

    echo ""
    echo "\033[32;1mSinopse:\033[m"
    echo "\t\033[1m${appName}\033[m [opções] "
    echo ""
    echo "\033[32;1mDescrição:\033[m"
    echo "\t    \033[1m${appName}\033[m é uma extensão do comando \033[1mls\033[m."
    echo "\t    Retorna o indicativo da existência de arquivos pesquisado(s)"
    echo "\tno(s) diretório(s) indicado(s), usando a lógica \033[1mOR\033[m."
    echo "\t    Zero (\033[1m0\033[m) para a não existência, ou a quantidade de arquivo(s)"
    echo "\tencontrado(s)."
    echo ""
    echo "\t    \033[1mopções\033[m todas as opções do comando \033[1mls\033[m exceto as que resultam em"
    echo "\tinformações extendidas."
    echo ""
    echo "\033[32;1mObservação:\033[m"

    echo "\t    O retorno usando a lógica \033[1mAND\033[m ainda não está implementada. A"
    echo "\tsolução é usar \033[1m${appName}\033[m individualmente para cada arquivo."
    echo ""
    sctinfo=$documents$list
    if [ -f $sctinfo ]; then
        echo "\t    Comandos pertencentes a este pacote de scripts:"
        echo "\t    \033[1m"`printsblist $sctinfo`"\033[m"
        echo ""
    fi
    echo "\033[32;1mExemplo:\033[m"
    echo "\t${appName}"
    echo "\t${appName} -a"
    echo "\t${appName} ./dir/*"
    echo "\t${appName} ./dir/."
    echo "\t${appName} ./*.ext"
    echo "\t${appName} *.ext *.sh *.dat ../*.pdf"
    echo ""

}

apphelp $1

