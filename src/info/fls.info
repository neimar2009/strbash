    echo ""    
    sctinfo=$documents$list
    if [ -f $sctinfo ]; then
        echo "\t    Comandos pertencentes a este pacote de scripts:"
        echo "\t    \033[1m"`printsblist $sctinfo`"\033[m"
        echo ""
    fi
    
    echo "\033[32;1mExemplo:\033[m"
    echo "\t${appName} ./*.ext"
    echo ""

}

apphelp $1

